{
    "name": "cl-use-form-state",
    "description": "Small utility to keep track of form state in React.",
    "version": "1.0.5",
    "author": {
        "name": "Christian Lindeneg",
        "email": "hi@lindeneg.org",
        "url": "https://lindeneg.org"
    },
    "keywords": [
        "react",
        "react-form",
        "form-state",
        "form-validation"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lindeneg/cl-use-form-state.git"
    },
    "homepage": "https://github.com/lindeneg/cl-use-form-state#readme",
    "license": "MIT",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "build": "yarn run build:types && yarn run build:js && rm -rf ./lib/tests",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
        "clean": "yarn run clean:soft",
        "clean:soft": "rm -rf ./lib",
        "clean:hard": "yarn run clean:soft && rm -rf ./node_modules",
        "clean:reset": "yarn run clean:hard && rm yarn.lock",
        "style": "yarn run style:format && yarn run style:lint",
        "style:lint": "yarn eslint ./src --cache --config ./.eslintrc.json",
        "style:format": "yarn prettier ./src --check --config ./.prettierrc",
        "style:fix": "yarn prettier ./src --write --config ./.prettierrc"
    },
    "peerDependencies": {
        "react": "^17.x.x"
    },
    "devDependencies": {
        "@babel/cli": "^7.13.14",
        "@babel/core": "^7.13.14",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-transform-runtime": "^7.13.10",
        "@babel/preset-env": "^7.13.12",
        "@babel/preset-react": "^7.13.13",
        "@babel/preset-typescript": "^7.13.0",
        "@babel/runtime": "^7.13.10",
        "@types/jest": "^26.0.22",
        "@types/react": "^17.0.3",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "babel-jest": "^26.6.3",
        "babel-loader": "^8.2.2",
        "eslint": "^7.25.0",
        "eslint-plugin-react": "^7.23.2",
        "eslint-plugin-react-hooks": "^4.2.0",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "react": "^17.0.2",
        "react-hooks-testing-library": "^0.6.0",
        "react-test-renderer": "^17.0.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3"
    }
}
