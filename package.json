{
    "name": "use-form-state",
    "description": "Small utility to keep track of form state in React.",
    "version": "1.0.0",
    "author": {
        "name": "Christian Lindeneg",
        "url": "https://lindeneg.org"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lindeneg/use-form-state.git"
    },
    "homepage": "https://github.com/lindeneg/use-form-state#readme",
    "license": "MIT",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "yarn run build:types && yarn run build:js",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
        "clean": "rm -rf ./lib ./dist",
        "reset": "yarn clean && rm -rf ./node_modules"
    },
    "peerDependencies": {
        "react": "^17.x.x"
    },
    "devDependencies": {
        "@babel/cli": "^7.13.14",
        "@babel/core": "^7.13.14",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-transform-runtime": "^7.13.10",
        "@babel/preset-env": "^7.13.12",
        "@babel/preset-react": "^7.13.13",
        "@babel/preset-typescript": "^7.13.0",
        "@babel/runtime": "^7.13.10",
        "@types/react": "^17.x.x",
        "@types/webpack": "^5.28.0",
        "babel-loader": "^8.2.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3",
        "webpack": "^5.30.0"
    }
}
